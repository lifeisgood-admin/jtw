<div class="container pt-3">
<h4 class="text-center mt-2">管理者ログイン</h4>

<%= form_with scope: :session, local: true do |f| %>
    <div class = "form-group">
        <%= f.label :mail, 'メールアドレス' %>
        <%= f.text_field :mail, class: 'form-control', id: 'session_mail' %>
    </div>
    <div class = "form-group">
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password, class: 'form-control', id: 'session_mail' %>
    </div>
    <div class="text-center mb-3">
        <%= f.submit 'ログインする', class: 'btn btn-primary' %>
    </div>
<% end %>

</div>