<div class="content_block clearfix" id="category_<%=category.id.to_s%>">
    <% if obj_position != "only" %>
        <div class="text_block <% if obj_position == "none" %>for_image_none text-center<% elsif obj_position == "right" %>for_image_right col-md-6 float-left<% elsif obj_position == "left" %>for_image_left col-md-6 float-right<% end %>">
            <% if category.content_type != "コンテンツ無し" %>
                <%= link_to topic_path(topic_category_id: category.id, topic_id: category.topics.first.id), class:"", style:"" do %>
                    <% if category.subscript.present? %>
                        <div class="subscript">
                            <%= category.subscript %>
                        </div>
                    <% end %>
                    <div class="category_name" style="color:<%=partner.main_color%>;">
                        <%= br_text_code_ok(category.name) %>
                    </div>
                    <% if category.description.present? %>
                        <div class="description">
                            <%= br_text_code_ok(category.description) %>
                        </div>
                    <% end %>
                <% end %>
            <% else %>
                <% if category.subscript.present? %>
                    <div class="subscript">
                        <%= category.subscript %>
                    </div>
                <% end %>
                <div class="category_name" style="color:<%=partner.main_color%>;">
                    <%= br_text_code_ok(category.name) %>
                </div>
                <% if category.description.present? %>
                    <div class="description">
                        <%= br_text_code_ok(category.description) %>
                    </div>
                <% end %>
            <% end %>
            <% if category.content_type != "コンテンツ無し" %>
                <div class="link_area">
                    <% if category.topics.size == 1 %>
                    <a class="link_for_detail sample5-3" style="color:<%=partner.main_color%>;" onMouseOut="this.style.borderBottom='solid 2px transparent';this.children[0].style.backgroundColor='<%=partner.main_color%>';this.children[1].style.borderTop='solid 2px white';this.children[1].style.borderRight='solid 2px white'" onMouseOver="this.style.borderBottom='solid 2px <%=partner.main_color%>';this.children[0].style.backgroundColor='white';this.children[1].style.borderTop='solid 2px <%=partner.main_color%>';this.children[1].style.borderRight='solid 2px <%=partner.main_color%>'" href="<%= topic_path(partner_url: partner.url, topic_category_id: category.id, topic_id: category.topics.first.id) %>">
                        詳しく見る
                    <% else %>
                    <a class="link_for_detail sample5-3" style="color:<%=partner.main_color%>;" onMouseOut="this.style.borderBottom='solid 2px transparent';this.children[0].style.backgroundColor='<%=partner.main_color%>';this.children[1].style.borderTop='solid 2px white';this.children[1].style.borderRight='solid 2px white'" onMouseOver="this.style.borderBottom='solid 2px <%=partner.main_color%>';this.children[0].style.backgroundColor='white';this.children[1].style.borderTop='solid 2px <%=partner.main_color%>';this.children[1].style.borderRight='solid 2px <%=partner.main_color%>'" href="<%= topic_list_path(partner_url: partner.url, topic_category_id: category.id) %>">
                        一覧を見る
                    <% end %>
                        <div class="circle_arrow_outer" style="background:<%=partner.main_color%>;border: 2px solid <%=partner.main_color%>;"></div>
                        <div class="circle_arrow_inner" onMouseOver="this.style.borderTop='solid 2px <%=partner.main_color%>';this.style.borderRight='solid 2px <%=partner.main_color%>'"></div>
                    </a>
                </div>
            <% end %>
        </div>
    <% end %>
    <% if obj_position != "none" %>
        <% if category.content_type != "コンテンツ無し" %>
            <div class="image_block <% if obj_position == "right" %>col-md-6 float-left<% elsif obj_position == "left" %>col-md-6 float-right<% end %>">
                <% if obj_type == "image" %>
                    <%= link_to topic_path(topic_category_id: category.id, topic_id: category.topics.first.id), class:"", style:"" do %>
                        <%= image_tag(category.thumbnail.variant( gravity: "center", resize: "900x600^", crop: "900x600+0+0" ).processed, class:'') %>
                    <% end %>
                <% else %>
                    <div class="yt-wrapper">
                        <%= movie_url_trim(category.movie_url) %>
                    </div>
                <% end %>
            </div>
        <% else %>
            <div class="image_block <% if obj_position == "right" %>col-md-6 float-left<% elsif obj_position == "left" %>col-md-6 float-right<% end %>">
                <% if obj_type == "image" %>
                    <%= image_tag(category.thumbnail.variant( gravity: "center", resize: "900x600^", crop: "900x600+0+0" ).processed, class:'') %>
                <% else %>
                    <div class="yt-wrapper">
                        <%= movie_url_trim(category.movie_url) %>
                    </div>
                <% end %>
            </div>
        <% end %>
        <% if obj_position == "only" %>
            <% if category.content_type != "コンテンツ無し" %>
                <div class="link_area">
                    <% if category.topics.size == 1 %>
                    <a class="link_for_detail sample5-3" style="color:<%=partner.main_color%>;" onMouseOut="this.style.borderBottom='solid 2px transparent';this.children[0].style.backgroundColor='<%=partner.main_color%>';this.children[1].style.borderTop='solid 2px white';this.children[1].style.borderRight='solid 2px white'" onMouseOver="this.style.borderBottom='solid 2px <%=partner.main_color%>';this.children[0].style.backgroundColor='white';this.children[1].style.borderTop='solid 2px <%=partner.main_color%>';this.children[1].style.borderRight='solid 2px <%=partner.main_color%>'" href="<%= topic_path(partner_url: partner.url, topic_category_id: category.id, topic_id: category.topics.first.id) %>">
                        詳しく見る
                    <% else %>
                    <a class="link_for_detail sample5-3" style="color:<%=partner.main_color%>;" onMouseOut="this.style.borderBottom='solid 2px transparent';this.children[0].style.backgroundColor='<%=partner.main_color%>';this.children[1].style.borderTop='solid 2px white';this.children[1].style.borderRight='solid 2px white'" onMouseOver="this.style.borderBottom='solid 2px <%=partner.main_color%>';this.children[0].style.backgroundColor='white';this.children[1].style.borderTop='solid 2px <%=partner.main_color%>';this.children[1].style.borderRight='solid 2px <%=partner.main_color%>'" href="<%= topic_list_path(partner_url: partner.url, topic_category_id: category.id) %>">
                        一覧を見る
                    <% end %>
                        <div class="circle_arrow_outer" style="background:<%=partner.main_color%>;border: 2px solid <%=partner.main_color%>;"></div>
                        <div class="circle_arrow_inner" onMouseOver="this.style.borderTop='solid 2px <%=partner.main_color%>';this.style.borderRight='solid 2px <%=partner.main_color%>'"></div>
                    </a>
                </div>
            <% end %>
        <% end %>
    <% end %>
</div>