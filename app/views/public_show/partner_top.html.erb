                            <th class=""><%= @partner.info4_item %></th>
                            <td class=""><%= br_text_code_ok(text_url_to_link(@partner.info4_content)) %></td>
                        </tr>
                    <% end %>
                    <% if @partner.info5_item.present? && @partner.info5_content.present? %>
                        <tr>
                            <th class=""><%= @partner.info5_item %></th>
                            <td class=""><%= br_text_code_ok(text_url_to_link(@partner.info5_content)) %></td>
                        </tr>
                    <% end %>
                    <% if @partner.info6_item.present? && @partner.info6_content.present? %>
                        <tr>
                            <th class=""><%= @partner.info6_item %></th>
                            <td class=""><%= br_text_code_ok(text_url_to_link(@partner.info6_content)) %></td>
                        </tr>
                    <% end %>
                    <% if @partner.info7_item.present? && @partner.info7_content.present? %>
                        <tr>
                            <th class=""><%= @partner.info7_item %></th>
                            <td class=""><%= br_text_code_ok(text_url_to_link(@partner.info7_content)) %></td>
                        </tr>
                    <% end %>
                    <% if @partner.info8_item.present? && @partner.info8_content.present? %>
                        <tr>
                            <th class=""><%= @partner.info8_item %></th>
                            <td class=""><%= br_text_code_ok(text_url_to_link(@partner.info8_content)) %></td>
                        </tr>
                    <% end %>
                    <% if @partner.info9_item.present? && @partner.info9_content.present? %>
                        <tr>
                            <th class=""><%= @partner.info9_item %></th>
                            <td class=""><%= br_text_code_ok(text_url_to_link(@partner.info9_content)) %></td>
                        </tr>
                    <% end %>
                    <% if @partner.info10_item.present? && @partner.info10_content.present? %>
                        <tr>
                            <th class=""><%= @partner.info10_item %></th>
                            <td class=""><%= br_text_code_ok(text_url_to_link(@partner.info10_content)) %></td>
                        </tr>
                    <% end %>
                </table>
                <% if @partner.map_url.present? %>
                    <div class="map_area">
                        <iframe src="<%= map_url_trim(@partner.map_url) %>" width="100%" height="100%" frameborder="0" style="border:0" allowfullscreen></iframe>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>