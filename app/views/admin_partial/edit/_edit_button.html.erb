<div class="edit_button_area">
    <%= form.submit "保存" ,class: 'btn btn-primary w-25'%>
    <span id="preview_btn">
        <% if path.present? %>
            <%= link_to 'プレビュー', path , target: :_blank, rel: :noopener ,class:"btn btn-success w-25" %>
        <% end %>
    </span>
    <%= link_to '終了', :back ,class:"btn btn-danger w-25" %>
</div>